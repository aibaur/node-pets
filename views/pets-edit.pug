extends layout

block content
    
  .row.justify-content-center
    .col-sm-6
      legend New Pet
      form(action=`/pets/${pet._id}?_method=PUT`, method="POST")
        .form-group
            label Name
            input.form-control(name="name" required value=pet.name)
        .form-group
            label Birthday
            input.form-control(name="birthday" required value=pet.birthday)   
        .form-group
            label Species
            input.form-control(name="species" required value=pet.species)    
        .form-group
            label Rectangular Image URL
            input.form-control(name="picUrl" required type="url" value=pet.picUrl) 
        .form-group
            label Square Image URL
            input.form-control(name="picUrlSq" required type="url" value=pet.picUrlSq) 
        .form-group
            label Favorite Food
            input.form-control(name="favoriteFood" required value=pet.favoriteFood)    
        .form-group
            label Description
            textarea.form-control(name="description" required minlength="140")= pet.description
        button(type="submit").btn.btn-primary Save
      .text-right
        form(action=`/pets/${pet._id}?_method=DELETE`, method="POST")
            button(type="submit").btn.btn-danger Remove
